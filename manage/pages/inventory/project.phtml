$kathaValue = isset($katha_cookie[$project]) ? $katha_cookie[$project] : (isset($_GET['katha']) ? $_GET['katha'] : '');
$plotValue  = isset($plot_cookie[$project]) ? $plot_cookie[$project] : (isset($_GET['plot']) ? $_GET['plot'] : '');
