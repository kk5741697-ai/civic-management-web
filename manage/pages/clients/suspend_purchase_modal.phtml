<script>
jQuery(function($){
  'use strict';

  // Initialize suspend purchase functionality
  function initSuspendPurchase() {
    // Global suspend function
    window.suspendPurchase = function(purchaseId) {
      $('#suspend_purchase_id').val(purchaseId);
      $('#suspend_error').addClass('d-none').text('');
      $('#suspend_reason').val('');
      $('#suspend_date').val(new Date().toISOString().slice(0, 10));
      $('#suspend_duration').val('30');
      $('#custom_duration_field').addClass('d-none');
      $('#suspendPurchaseModal').modal('show');
    };

    // Duration change handler
    $('#suspend_duration').off('change').on('change', function(){
      if ($(this).val() === 'custom') {
        $('#custom_duration_field').removeClass('d-none');
        $('#custom_duration_days').focus();
      } else {
        $('#custom_duration_field').addClass('d-none');
      }
    });

    // Suspend save handler
    $('#suspend_purchase_save').off('click').on('click', function(){
      var $btn = $(this);
      var purchaseId = $('#suspend_purchase_id').val();
      var suspendDate = $('#suspend_date').val();
      var duration = $('#suspend_duration').val();
      var reason = $('#suspend_reason').val().trim();
      
      // Validation
      var errors = [];
      if (!suspendDate) errors.push('Please select a suspension date.');
      if (!reason) errors.push('Please provide a suspension reason.');
      if (reason && reason.length < 10) errors.push('Suspension reason must be at least 10 characters long.');
      
      var days = duration;
      if (duration === 'custom') {
        days = $('#custom_duration_days').val();
        if (!days || days <= 0) {
          errors.push('Please enter a valid custom duration (1 or more days).');
        } else if (days > 3650) {
          errors.push('Custom duration cannot exceed 3650 days (10 years).');
        }
      }
      
      if (errors.length > 0) {
        $('#suspend_error').removeClass('d-none').html(errors.join('<br>'));
        return;
      }
      
      // Confirm action
      if (!confirm('Are you sure you want to suspend this purchase for ' + days + ' days?')) {
        return;
      }
      
      $btn.prop('disabled', true).html('<i class="spinner-border spinner-border-sm me-1"></i>Suspending...');
      
      var payload = {
        s: 'suspend_purchase',
        purchase_id: purchaseId,
        suspend_date: suspendDate,
        duration_days: days,
        reason: reason
      };
      
      $.post(Wo_Ajax_Requests_File() + '?f=manage_inventory', payload)
        .done(function(response){
          var data = typeof response === 'string' ? JSON.parse(response) : response;
          
          if (data && (data.status === 200 || data.status === '200')) {
            $('#suspendPurchaseModal').modal('hide');
            
            // Show success message
            var $alert = $('<div class="alert alert-warning alert-dismissible fade show" role="alert">' +
              '<i class="lni lni-pause me-2"></i>Purchase has been suspended for ' + days + ' days.' +
              '<button type="button" class="btn-close" data-bs-dismiss="alert"></button>' +
              '</div>');
            
            $('#client_details').prepend($alert);
            
            // Update purchase row to show suspended status
            var $row = $('#purchaseRow_' + purchaseId);
            $row.addClass('table-warning').find('td:nth-child(8)').html('<span class="badge bg-warning">Suspended</span>');
            
            setTimeout(function(){
              $alert.fadeOut();
            }, 5000);
            
          } else {
            var errorMsg = (data && data.message) ? data.message : 'Failed to suspend purchase';
            $('#suspend_error').removeClass('d-none').text(errorMsg);
          }
        })
        .fail(function(){
          $('#suspend_error').removeClass('d-none').text('Server error occurred. Please try again.');
        })
        .always(function(){
          $btn.prop('disabled', false).html('<i class="lni lni-pause me-1"></i>Suspend Purchase');
        });
    });

    // Enhanced date picker
    try {
      if (typeof flatpickr !== 'undefined') {
        flatpickr('#suspend_date', {
          dateFormat: 'Y-m-d',
          defaultDate: new Date(),
          minDate: new Date(),
          locale: {
            firstDayOfWeek: 1
          }
        });
      }
    } catch(e) {
      // Flatpickr not available
    }

    // Auto-resize textarea and character counter
    $('#suspend_reason').on('input', function(){
      this.style.height = 'auto';
      this.style.height = (this.scrollHeight) + 'px';
      
      var length = $(this).val().length;
      var $counter = $(this).siblings('.char-counter');
      if (!$counter.length) {
        $counter = $('<small class="form-text text-muted char-counter"></small>');
        $(this).after($counter);
      }
      $counter.text(length + ' characters');
      
      if (length < 10) {
        $counter.addClass('text-danger').removeClass('text-success');
      } else {
        $counter.addClass('text-success').removeClass('text-danger');
      }
    });

    // Duration helper text
    $('#suspend_duration').on('change', function(){
      var duration = $(this).val();
      var $helper = $(this).siblings('.duration-helper');
      if (!$helper.length) {
        $helper = $('<small class="form-text text-muted duration-helper"></small>');
        $(this).after($helper);
      }
      
      if (duration === 'custom') {
        $helper.text('Enter custom duration in the field below.');
      } else {
        var endDate = new Date();
        endDate.setDate(endDate.getDate() + parseInt(duration));
        $helper.text('Suspension will end approximately on ' + endDate.toLocaleDateString());
      }
    });
  }

  // Add to global initialization
  if (typeof window.initViewClientComponents !== 'function') {
    window.initViewClientComponents = function() {
      initSuspendPurchase();
    };
  } else {
    var originalInit = window.initViewClientComponents;
    window.initViewClientComponents = function() {
      originalInit();
      initSuspendPurchase();
    };
  }

  // Cleanup
  $('#viewClient-modal').on('hidden.bs.modal.suspendPurchase', function(){
    $(document).off('.suspendPurchase');
  });

});
</script>