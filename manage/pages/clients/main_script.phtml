  function computeAndUpdateTotals(selItem) {
    var perKatha = parseFloat($('#perKathaPrice').val());
    if (isNaN(perKatha)) perKatha = 0;
    var down = parseFloat($('#downPayment').val());
    if (isNaN(down)) down = 0;
